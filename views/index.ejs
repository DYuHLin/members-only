<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <section>
        <a href="/logout">Log out</a>
        <h1>Home <%=user.name %></h1>
        <h1>Login</h1>

        <%posts.forEach(element => { %>
            <div>
                <h2><%=element.title %></h2>
                <p><%=element.message %></p>
                <span><%=element.date_formatted %></span>
            </div>
        <% }); %>
    </section>
</body>
</html>